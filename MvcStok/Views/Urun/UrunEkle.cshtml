@model MvcStok.Models.Entity.URUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<form method="post" class="form-group">
    <div>

        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" maxlength="50"/>
    </div>
    <div>
        <label style="margin-top:15px">Marka</label>
        <input type="text" class="form-control" name="MARKA" required=""/>
    </div>
    <div>
        <label style="margin-top:15px">Kategori Seçiniz</label>
        @Html.DropDownListFor(m=>m.KATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.dgr,new {@class="form-control"})
    </div>    
    <div>
        <label style="margin-top:15px">Fiyatı</label>
        <input type="text" class="form-control" name="FİYAT" required=""/>
    </div>    
    <div>
        <label style="margin-top:15px">Stok Adedi</label>
        <input type="text" class="form-control" name="STOK" required=""/>
    </div>
    <div>
        <button class="btn btn-info" style="margin-top:15px">Yeni Urun Ekle</button>
    </div>
</form>

